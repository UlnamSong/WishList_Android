<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="15dp">

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="타이틀"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:text="기획 및 디자인"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:id="@+id/tvDialogContent" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/spinner_content"
            android:layout_below="@+id/tvDialogContent"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/positive_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/edit_okbutton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:scaleType="fitCenter"
            android:background="@drawable/primary_button_bg"
            android:textColor="@color/colorLoginWhite"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/spinner_content" />

        <Button
            android:id="@+id/negative_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/edit_cancelbutton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:scaleType="fitCenter"
            android:background="@drawable/delete_button_bg"
            android:textColor="@color/colorLoginWhite"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/positive_button" />

    </RelativeLayout>


</RelativeLayout>