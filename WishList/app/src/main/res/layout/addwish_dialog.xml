<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lay_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="15dp">

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="할 일 추가"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:text="해야할 일을 입력해주세요."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:id="@+id/tvDialogContent"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_primarybg"
            android:layout_below="@+id/tvDialogContent"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:hint="할 일을 입력해주세요."
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp" />

        <TextView
            android:text="카테고리를 설정해주세요."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tvCategory"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/etTitle"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:id="@+id/spinnerCategory"
            android:layout_below="@+id/tvCategory"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="중요도를 선택해주세요."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tvImportancy"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/spinnerCategory"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/spinnerImportancy"
            android:layout_below="@+id/tvImportancy"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:text="반복 횟수를 입력해주세요."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tvMax"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/spinnerImportancy"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/etMax"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_primarybg"
            android:layout_marginTop="10dp"
            android:hint="반복 횟수를 입력해주세요."
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:layout_below="@+id/tvMax"
            android:layout_alignParentStart="true"
            android:inputType="number" />

        <Button
            android:layout_below="@+id/etMax"
            android:id="@+id/deleteButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="추가하기"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:scaleType="fitCenter"
            android:background="@drawable/primary_button_bg"
            android:textColor="@color/colorLoginWhite"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="돌아가기"
            android:scaleType="fitCenter"
            android:background="@drawable/primary_button_bg"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="@color/colorLoginWhite"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/deleteButton" />

    </RelativeLayout>


</RelativeLayout>